CREATE TABLE test_first_segment_reject_limit (a int, b text);
SET gp_initial_bad_row_limit = 2;
COPY test_first_segment_reject_limit FROM STDIN WITH DELIMITER '|' segment reject limit 20;
error0
error1
error2
error3
1|1_number
2|2_number
3|3_number
4|4_number
5|5_number
5|5_number
6|6_number
7|7_number
\.

